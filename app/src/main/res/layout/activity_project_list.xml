<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <Button
        android:id="@+id/addProjectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_project"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"
        android:layout_alignParentTop="true"
        tools:ignore="RelativeOverlap" />

    <Button
        android:id="@+id/deleteProjectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Excluir Projeto"
        android:layout_below="@id/projectListView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        tools:ignore="HardcodedText" />


    <TextView
        android:id="@+id/projectListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/project_list_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_alignBaseline="@+id/addProjectButton" />


    <ListView
        android:id="@+id/projectListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/addProjectButton"
        android:layout_marginTop="16dp" />



</RelativeLayout>
